---
import Navegacio from "../components/Navegacio.astro";
import Titol from "../components/Titol.astro";
import Peu from "../components/Peu.astro";
import Layout from "../layouts/Layout.astro";
import contacteData from "../assets/data/cv.json";
---

<Layout>
  <Navegacio />
  <main>
    <Titol title="Contacte" />
    <hr class="w-3/4 sm:w-lg md:w-xl mx-auto border-gray-400 opacity-50 my-8" />
    <section class="w-3/4 sm:w-lg md:w-xl mx-auto">
      <p class="font-sans font-semibold text-lg text-[#334155] mb-8">
        Podeu contactar amb mi mitjançant els mètodes següents. Tingueu en
        compte que actualment no estic disponible per a projectes <i
          >freelance</i
        >.
      </p>
      <ul class="grid grid-cols-1 xl:grid-cols-2 gap-8">
        {
          Object.entries(contacteData.contact).map(([key, value]) => (
            <li class="flex flex-col gap-2">
              <span class="font-semibold text-xl tracking-tight">{key}</span>

              {value.startsWith("https") ? ( // Si és una URL
                <a
                  class="text-slate-700 font-inconsolata"
                  href={value}
                  target="_blank"
                >
                  {value}
                </a>
              ) : (
                // Si no és una URL, simplement mostra el text
                <span class="text-slate-700 font-inconsolata">{value}</span>
              )}
            </li>
          ))
        }
      </ul>
    </section>
    <hr class="w-3/4 sm:w-lg md:w-xl mx-auto border-gray-400 opacity-50 my-8" />
  </main>
  <Peu />
</Layout>
